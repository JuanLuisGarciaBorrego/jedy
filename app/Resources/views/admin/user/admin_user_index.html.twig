{% extends ':admin:base_admin.html.twig' %}

{% block title %} {{ 'user.title.plural'|trans }} {% endblock %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li class="active">{{ 'user.title.plural'|trans }}</li>
    </ul>

    {% include 'admin/_flashbag.html.twig' %}

    <div class="row margin-vertical-md">
        <div class="col-md-8">
            <h1 class="h-btn-line">{{ 'user.title.plural'|trans }}</h1>
        </div>
        <div class="col-md-4 text-right">
            <a href="{{ path('admin_user_new') }}" class="btn btn-primary btn-sm">{{ 'user.add'|trans }}</a>
        </div>
    </div>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'user.username'|trans }}</th>
            <th>{{ 'user.email'|trans }}</th>
            <th>{{ 'user.is_active'|trans }}</th>
            <th>{{ 'app.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ user.username}}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isActive == 1 ? 'app.yes'|trans : 'app.no'|trans }}</td>
                <td>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-xs">{{ 'app.edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
