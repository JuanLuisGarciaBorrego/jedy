{% extends ':admin:base_admin.html.twig' %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li class="active">{{ 'nav.title.plural'|trans }}</li>
    </ul>

    {% include 'admin/_flashbag.html.twig' %}

    <div class="row margin-vertical-md">
        <div class="col-md-8">
            <h1 class="h-btn-line">{{ 'nav.title.plural'|trans }}</h1>
        </div>
        <div class="col-md-4 text-right">
            <a href="{{ path('admin_nav_new') }}" class="btn btn-primary btn-sm">{{ 'nav.add'|trans }}</a>
        </div>
    </div>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'nav.name'|trans }}</th>
            <th>{{ 'app.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for nav in navs %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ nav.name}}</td>
                <td>
                    <a href="" class="btn btn-primary btn-xs">{{ 'nav.add'|trans }}</a>
                    <a href="{{ path('admin_nav_edit', {'id': nav.id}) }}" class="btn btn-warning btn-xs">{{ 'app.edit'|trans }}</a>
                    <a href="{{ path('admin_nav_translations', {'id':nav.id}) }}" class="btn btn-info btn-xs">{{ 'app.translations'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
