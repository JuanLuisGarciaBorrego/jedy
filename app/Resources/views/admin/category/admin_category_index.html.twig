{% extends ':admin:base_admin.html.twig' %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li class="active">Categories</li>
    </ul>

    {% include 'admin/_flashbag.html.twig' %}

    <div class="row margin-vertical-md">
        <div class="col-md-8">
            <h1 class="h-btn-line">Categories</h1>
        </div>
        <div class="col-md-4 text-right">
            <a href="{{ path('admin_category_new') }}" class="btn btn-primary btn-sm">Add category</a>
        </div>
    </div>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Parent</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ category.name}}</td>
                <td>{{ category.parent.name |default('-')}}</td>
                <td>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-warning btn-xs">Edit</a>
                    <a href="{{ path('admin_category_translations', {'id': category.id}) }}" class="btn btn-info btn-xs">Translations</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
