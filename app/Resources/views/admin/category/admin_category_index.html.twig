{% extends ':admin:base_admin.html.twig' %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li class="active">{{ 'category.title.plural'|trans }}</li>
    </ul>

    {% include 'admin/_flashbag.html.twig' %}

    <div class="row margin-vertical-md">
        <div class="col-md-8">
            <h1 class="h-btn-line">{{ 'category.title.plural'|trans }}</h1>
        </div>
        <div class="col-md-4 text-right">
            <a href="{{ path('admin_category_new') }}" class="btn btn-primary btn-sm">{{ 'category.add'|trans }}</a>
        </div>
    </div>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'category.name'|trans }}</th>
            <th>{{ 'category.parent'|trans }}</th>
            <th>{{ 'app.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ category.name}}</td>
                <td>{{ category.parent.name |default('-')}}</td>
                <td>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-warning btn-xs">{{ 'app.edit'|trans }}</a>
                    <a href="{{ path('admin_category_translations', {'id': category.id}) }}" class="btn btn-info btn-xs">{{ 'app.translation'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
