{% extends ':admin:base_admin.html.twig' %}

{% block content %}
    Translation {{ category }}
    <hr>
    {% for translation in translations %}
        {{ translation.name }} -

        {% if category.locale == translation.code %}
            <a href="{{ path('admin_category_edit', {'id': category.id}) }}">edit</a>
        {% else %}
            {% if(is_category_translation(category.locale, translation.code, category.id)) %}
                <a href="{{ path('admin_category_translation', {'id': category.id, 'localeCategory': category.locale, 'localeTranslation': translation.code} ) }}">edit</a>
            {% else %}
                <a href="{{ path('admin_category_translation', {'id': category.id, 'localeCategory': category.locale, 'localeTranslation': translation.code} ) }}">add</a>
            {% endif %}
        {% endif %}
        <br>
    {% endfor %}

{% endblock %}
