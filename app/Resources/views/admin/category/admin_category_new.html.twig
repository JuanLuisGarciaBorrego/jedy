{% extends ':admin:base_admin.html.twig' %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li><a href="{{ path('admin_category_home') }}">Categories</a></li>
        {% if form.vars.data.locale != locales.getLocaleActive %}
            <li><a href="{{ path('admin_category_edit', {'id':form.vars.value.parentMultilangue.id }) }}">{{ form.vars.value.parentMultilangue.name }}</a></li>
            <li><a href="{{ path('admin_category_translations', {'id':form.vars.value.parentMultilangue.id }) }}">Translations</a></li>
            <li class="active">Add translation category</li>
        {% else %}
            <li class="active">Add category</li>
        {% endif %}

    </ul>

    <div class="row margin-vertical-md">
        <div class="col-md-12">
            <h1 class="h-btn-line">
                {% if form.vars.data.locale != locales.getLocaleActive %}
                    Add translation category
                {% else %}
                    Add category
                {% endif %}
            </h1>
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">
        {% if form.vars.data.locale != locales.getLocaleActive %}
            Add translation category
        {% else %}
            Add category
        {% endif %}
    </button>
    {{ form_end(form) }}

{% endblock %}
