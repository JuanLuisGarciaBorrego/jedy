{% extends ':admin:base_admin.html.twig' %}

{% block content %}

    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li><a href="{{ path('admin_content_home') }}">Contents</a></li>
        <li class="active">Edit content - {{ type }}</li>
    </ul>

    <div class="row margin-vertical-md">
        <div class="col-xs-8">
            <h1 class="h-btn-line">Edit content - {{ type }}</h1>
        </div>

        <div class="col-xs-4">
            {{ form_start(form_delete) }}
                {{ form_widget(form_delete) }}
                <button class="btn btn-block btn-danger" type="submit">Delete</button>
            {{ form_end(form_delete) }}
        </div>
    </div>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Edit category - {{ type }}</button>
    {{ form_end(form) }}

{% endblock %}
