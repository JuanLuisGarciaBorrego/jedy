{% extends ':admin:base_admin.html.twig' %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        {% if type %}
            <li><a href="{{ path('admin_content_home') }}">Content</a></li>
            <li class="active">Contents {{ type }}</li>
        {% else %}
            <li class="active">Contents</li>
        {% endif %}

    </ul>

    {% include 'admin/_flashbag.html.twig' %}

    <div class="row margin-vertical-md">
        <div class="col-md-8">
            <h1 class="h-btn-line">Contents {{ type }}</h1>
        </div>
        <div class="col-md-4 text-right">
            <div class="btn-group">
                <a href="#" class="btn btn-primary btn-sm">Add content</a>
                <a href="#" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('admin_content_new', {'type': 'page'}) }}">Page</a></li>
                    <li><a href="{{ path('admin_content_new', {'type': 'post'}) }}">Post</a></li>
                </ul>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Category</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ content.title}}</td>
                <td>{{ content.category.name |default("-")}}</td>
                <td><span class="label label-default">{{ content.type}}</span></td>
                <td>
                    <a href="{{ path('admin_content_edit', {'id': content.id}) }}" class="btn btn-warning btn-xs">Edit</a>
                    <a href="{{ path('admin_content_translations', {'id': content.id}) }}" class="btn btn-info btn-xs">Translations</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="pager">
        {% set prev = page -1  %}

        {% if prev != 0 %}
            <li class="previous"><a href="{{ path('admin_content_home', {'page': prev}) }}">&larr; Older</a></li>
        {% else %}
            <li class="previous disabled"><a href="">&larr; Older</a></li>
        {% endif %}

        {% if totalPages >= (page+1) %}
            <li class="next"><a href="{{ path('admin_content_home', {'page': page+1}) }}">Newer &rarr;</a></li>
        {% else %}
            <li class="next disabled"><a href="">Newer &rarr;</a></li>
        {% endif %}
    </ul>

{% endblock %}
