{% extends ':admin:base_admin.html.twig' %}

{% block title %} {{ 'content.add'|trans }} {% endblock %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li><a href="{{ path('admin_content_home') }}">{{ 'content.title.plural'|trans }}</a></li>
        <li class="active">{{ 'content.add'|trans }} - {{ ('content.type.' ~ type)|trans }}</li>
    </ul>

    <div class="row margin-vertical-md">
        <div class="col-md-12">
            <h1 class="h-btn-line">
                {{ 'content.add'|trans }} - {{ ('content.type.' ~ type)|trans }}
            </h1>
        </div>
    </div>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary"> {{ 'content.add'|trans }} - {{ ('content.type.' ~ type)|trans }}</button>
    {{ form_end(form) }}

{% endblock %}
