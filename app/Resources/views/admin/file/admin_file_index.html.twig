{% extends ':admin:base_admin.html.twig' %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('admin_home') }}">Home</a></li>
        <li class="active">Files</li>
    </ul>

    {% include 'admin/_flashbag.html.twig' %}

    <div class="row margin-vertical-md">
        <div class="col-md-8">
            <h1 class="h-btn-line">Files</h1>
        </div>
        <div class="col-md-4 text-right">
            <a href="{{ path('admin_file_upload') }}" class="btn btn-primary btn-sm">Add File</a>
        </div>
    </div>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for item in files %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ item.filename }}</td>
                <td><i class="fa fa-clock-o"></i> {{ item.cTime | date("d/m/Y H:I") }}</td>
                <td>{{ render_file(item.filename, item.extension) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="pager">
        {% set prev = page -1  %}

        {% if prev != 0 %}
            <li class="previous"><a href="{{ path('admin_file_home_page', {'page': prev}) }}">&larr; Older</a></li>
        {% else %}
            <li class="previous disabled"><a href="">&larr; Older</a></li>
        {% endif %}

        {% if totalPages >= (page+1) %}
            <li class="next"><a href="{{ path('admin_file_home_page', {'page': page+1}) }}">Newer &rarr;</a></li>
        {% else %}
            <li class="next disabled"><a href="">Newer &rarr;</a></li>
        {% endif %}
    </ul>
{% endblock %}
