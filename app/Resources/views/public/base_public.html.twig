{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/flatly/bootstrap.min.css" rel="stylesheet" integrity="sha256-Av2lUNJFz7FqxLquvIFyxyCQA/VHUFna3onVy+5jUBM= sha512-zyqATyziDoUzMiMR8EAD3c5Ye55I2V3K7GcmJDHbL49cXzFQCEA6flSKqxEzwxXqq73/M4A0jKFFJ/ysEhbExQ==" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style-public.css') }}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
{% endblock %}

{% block body %}

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('app_index') }}">{{ get_configuration()['site_title'] }}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('app_index') }}">Home</a></li>
                    {% if get_configuration()['enable_blog']  %}
                    <li><a href="{{ path('app_blog_index') }}">Blog</a></li>
                    {% endif %}
                </ul>

                {{ nav_locale('principal', app.request.locale)  }}

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'app.about'|trans }} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="https://github.com/JuanLuisGarciaBorrego/jedy" target="_new"><i class="fa fa-github"></i> {{ 'app.github'|trans }}</a></li>
                            <li><a href="http://juanluisgarciaborrego.com/" target="_new"><i class="fa fa-user"></i> {{ 'app.website'|trans }}</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header"><i class="fa fa-key"></i> {{ 'app.private'|trans }}</li>
                            <li><a href="{{ path('admin_home') }}">{{ 'app.administration'|trans }}</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'app.language'|trans }} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            {% for locale in locales.getLocales(true) %}
                                <li><a href="{{ path('app_index', {'_locale': locale.code}) }}">
                                    {% if app.request.locale == locale.code %}
                                        <i class="fa fa-language"></i>
                                    {% endif %}
                                    {{ locale.name }}
                                </a></li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>

            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        {% block content %}

        {% endblock %}

        <footer>
            <div class="well text-center">
                <div>
                    <i class="fa fa-star"></i> Jedy CMS Multi-language<br>
                    Created by <a href="https://twitter.com/JuanluGarciaB" target="_new"> Juan Luis García Borrego </a>
                </div>
                <div>
                    <p>
                        <a href="https://github.com/JuanLuisGarciaBorrego/jedy" target="new">Github Project</a>
                        <span class="hide-xs">·</span>
                        <a href="https://github.com/JuanLuisGarciaBorrego/jedy/issues" target="_new">Issues</a>
                    </p>
                </div>
            </div>
        </footer>

    </div> <!-- /container -->
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
{% endblock %}