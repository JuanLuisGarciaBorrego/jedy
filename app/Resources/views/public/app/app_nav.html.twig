{% for navi in nav %}
{% if navi.childrenContent is empty %}
  <li><a href="{{navi.slug}}">{{navi.name}}</a></li>
{% else %}
  <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{navi.name}} <span class="caret"></span></a>
      <ul class="dropdown-menu">
        {% for childNav in navi.childrenContent %}
          <li><a href="/{{app.request.locale}}/{{childNav.slug}}">{{childNav.name}}</a></li>
        {% endfor %}
      </ul>
  </li>
{% endif %}
{% endfor %}
